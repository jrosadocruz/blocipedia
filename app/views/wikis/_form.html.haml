= form_for @wiki do |f|
  = f.text_field :title
  = f.text_area :body
  - if @wiki.user == current_user && current_user.premium?
    = f.check_box :private
  - if current_user.admin?
    = f.check_box :private

  %h3 Collaborators
  = f.collection_check_boxes(:collaborator_ids, User.all, :id, :full_name)

  .actions
    = f.submit 'Save changes', class: 'button small'
